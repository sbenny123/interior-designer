<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.main.fragments.arView.ArViewFragment">

    <!-- Icons made by Freepik from www.flaticon.com -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_show_item_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/fab_show_item_options"
        android:src="@drawable/edit_vector"
        android:visibility="gone"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_take_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_change_item_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_show_item_options"
        app:layout_constraintEnd_toEndOf="@+id/fab_show_item_options"
        app:layout_constraintStart_toStartOf="@+id/fab_show_item_options"
        app:srcCompat="@drawable/ic_format_paint"
        android:contentDescription="@string/text_change_design" />

    <TextView
        android:id="@+id/text_change_item_design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_change_design"
        app:layout_constraintBottom_toBottomOf="@+id/fab_change_item_design"
        app:layout_constraintStart_toEndOf="@+id/fab_change_item_design"
        app:layout_constraintTop_toTopOf="@+id/fab_change_item_design" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/fab_change_item_design"
        app:layout_constraintEnd_toEndOf="@+id/fab_change_item_design"
        app:layout_constraintStart_toStartOf="@+id/fab_change_item_design"
        app:srcCompat="@drawable/ic_delete"
        android:contentDescription="@string/text_remove_item" />

    <TextView
        android:id="@+id/text_remove_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/text_remove_item"
        app:layout_constraintBottom_toBottomOf="@+id/fab_remove_item"
        app:layout_constraintStart_toEndOf="@+id/fab_remove_item"
        app:layout_constraintTop_toTopOf="@+id/fab_remove_item" />

    <Button
        android:id="@+id/btn_take_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:clickable="true"
        android:drawableTop="@android:drawable/ic_menu_camera"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905"
        app:layout_constraintRight_toLeftOf="@id/btn_select_items"
        app:useCompatPadding="false" />

    <Button
        android:id="@+id/btn_select_items"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/round_button"
        android:drawableTop="@drawable/couch_icon"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/btn_select_items_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/btn_take_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905" />

    <FrameLayout
        android:id="@+id/fragment_ar"
        android:layout_width="530dp"
        android:layout_height="878dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.21" />

    <FrameLayout
        android:id="@+id/fragment_materials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>