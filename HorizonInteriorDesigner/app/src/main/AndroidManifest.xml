<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.horizoninteriordesigner">

    <!-- Get permission to use camera -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- Limit app visibility in Google Play Store to only ARCore supported devices -->
    <uses-feature android:name="android.hardware.camera.ar" android:required="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.HorizonInteriorDesigner" >
    <!-- android:icon="@mipmap/ic_launcher" -->

        <meta-data
            android:name="com.viromedia.API_KEY"
            android:value="YOUR_API_KEY_HERE" />

        <activity
            android:name="com.example.horizoninteriordesigner.main.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            "Google Play Services for AR" (ARCore) is to be installed,
                as the app does not include any non-AR features.
         -->
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

    </application>

</manifest>